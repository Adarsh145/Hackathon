{
  "manifest_version": 3,
  "name": "Google Meet Recorder",
  "version": "1.0",
  "description": "Record voice during Google Meet calls",
  "permissions": ["activeTab", "storage", "audioCapture"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "index.html",
    "script.js"
  ]
}
